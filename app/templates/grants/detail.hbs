{{#link-to 'grants' class="btn btn-small back-arrow"}}<i class="fa fa-arrow-left fa-lg text-dark"></i>{{/link-to}}
<h2 class="font-weight-light d-inline-block">Grant Details</h2>

<div class='container'>
  <div class='row'>
    <ul class='col-sm-6'>
      <li><strong>Project Name:</strong> {{model.grant.projectName}}</li>
      <li><strong>Award Number:</strong> {{model.grant.awardNumber}}</li>
      <li><strong>Funder:</strong> {{model.grant.primaryFunder.name}}</li>
      <li><strong>Start:</strong> {{format-date model.grant.startDate }}</li>
      <li><strong>End:</strong> {{format-date model.grant.endDate}}</li>
    </ul>

    <ul class='col-sm-6'>
      <li><strong>Status:</strong> {{model.grant.awardStatus}}</li>
      {{!-- <li><strong>Created by:</strong> {{model.creator.username}} on {{model.creationDate}}</li> --}}
      <li><strong>PI:</strong> <a href='mailto:{{model.grant.pi.email}}'>{{model.grant.pi.displayName}}</a></li>
      <li><strong>CoPIs:</strong>
        <ul>
          {{#each model.grant.coPis as |person|}}
            <li><a href='mailto:{{person.email}}'>{{person.displayName}}</a></li>
          {{/each}}
        </ul>
      </li>
    </ul>
  </div>
</div>

<h3  class="font-weight-light">Submissions for grant</h3>

{{models-table
  data=model.submissions
  columns=columns
  themeInstance=themeInstance
  showColumnsDropdown=false
  filteringIgnoreCase=true
  multipleColumnsSorting=false
  useFilteringByColumns=false
  showGlobalFilter=false
}}

{{#if (get (await currentUser.user) 'isSubmitter')}}
  {{#link-to 'submissions.new' (query-params grant=model.id) class="btn btn-primary"}}Create New Submission{{/link-to}}
{{/if}}
