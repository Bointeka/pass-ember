<header class="container-fluid mb-0 p-0">
  <div class="row justify-content-center">
    <div class="row align-items-center col-10">
      <div class="pass-title mr-auto">
        <h1 class="pull-left font-weight-normal">PASS</h1>
        <span class="line-height-45 pl-2 font-weight-light">Public Access Submission System</span>
      </div>
      {{#link-to 'index' class='navbar-brand'}}
        <img src='{{rootURL}}logo.png' alt='Logo' >
      {{/link-to}}
    </div>
  </div>
</header>
<nav class="app-header navbar bg-gray-100 mb-4 justify-content-center">
  <div class="row col-10">
    <ul class="nav navbar-nav">
      <li class="nav-item">
        {{#link-to 'dashboard' class='nav-link'}}Home{{/link-to}}
      </li>
      <span class="d-inline m-1"></span>
      <li class="nav-item">
        {{#link-to 'grants' class="nav-link"}}Grants{{/link-to}}
      </li>
      <span class="d-inline m-1"></span>
      <li class="nav-item">
        {{#link-to 'submissions' class="nav-link"}}Submissions{{/link-to}}
      </li>
      <span class="d-inline m-1"></span>
      <li class="nav-item">
        {{#link-to 'about' class='nav-link'}}About{{/link-to}}
      </li>
      <span class="d-inline m-1"></span>
      <li class="nav-item">
        {{#link-to 'contact' class='nav-link borderless'}}Contact{{/link-to}}
      </li>
    </ul>
    <ul class="nav navbar-nav ml-auto">
      <li class="nav-item ">
          {{#if session.authenticated}}
            <span class="navbar-text ml-5">
              {{!-- Logged in as: --}}
              <span class='text-info'>
                {{session.user.username}} ({{session.user.role}})
              </span>
            </span>
            <button {{action 'logout'}} class="btn btn-warning btn-sm ml-2">Logout</button>
          {{/if}}
      </li>
    </ul>
  </div>
</nav>

<div class='container-fluid'>
  {{outlet}}
</div>

{{! Footer}}
<div class='container mt-4'>
  <p class='text-center'>
    <small>Making Public Access Policy compliance easier.</small>
  </p>
  <p class='text-center'>
    <small>rev. {{app-version hideVersion=true}}</small>
  </p>
</div>
