
<table class="table">
    <thead>
        <tr>
            <th>Award Number</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
{{#each grants as |grant|}}
        <tr>
            <td>{{#link-to "grants.show" grant}}{{grant.awardNumber}}{{/link-to}}</td>
            <td>{{grant.projectName}}</td>
            <td>
                {{#if remove}}
                    <span class="btn btn-danger" onclick={{action remove grant}}>Remove</span>
                {{/if}}

            </td>
        </tr>
{{/each}}
    </tbody>
</table>
