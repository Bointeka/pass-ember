<h2 class="mr-4 font-weight-light">Submission Details </h2>
{{#link-to "submission.show" model class="pull-right"}}Edit Submission{{/link-to}}
<div class="container">
  <div class="row">
    <ul class="col-sm-6">
      {{#if model.title}}<li><strong>Title:</strong> {{model.title}}</li>{{/if}}
      {{#if model.doi}}<li><strong>DOI:</strong> {{model.doi}}</li>{{/if}}
      {{#if model.author.name}}<li><strong>Author:</strong> {{model.author.name}}{{#if model.author.orcid}} &lt;{{model.author.orcid}}&gt;{{/if}}</li>{{/if}}
    </ul>

    <ul class="col-sm-6">
      {{#if model.journal.name}}<li><strong>Journal:</strong> {{model.journal.name}}</li>{{/if}}
      {{#if model.volume}}<li><strong>Volume:</strong> {{model.volume}}</li>{{/if}}
      {{#if model.issue}}<li><strong>Issue:</strong> {{model.issue}}</li>{{/if}}
      {{#if model.publication.date}}<li><strong>Publication Date:</strong> </li>{{/if}}
    </ul>
  </div>
</div>
<div class='row row-eq-height'>
  <div class='col-md-6'>
    <div class='card'>
      <div class="card-header">Funding</div>
      <div class='card-body'>
        {{#if model.grants}}
          {{#each model.grants as |grant|}}
            <p class="submission-funders">
              <div class="row">
                <div class="col-lg-3">Funder:</div>
                <div class="col-lg">{{grant.funder.name}}</div>
              </div>
              <div class="row">
                <div class="col-lg-3">Award Number:</div>
                <div class="col-lg">{{grant.awardNumber}}</div>
              </div>
            </p>
          {{/each}}
        {{else}}
          Not applicable
        {{/if}}
      </div>
    </div>
  </div>
  <div class='col-md-6'>
    <div class='card'>
      <div class="card-header">Submission(s)</div>
      <div class='card-body'>
        <div class="row">
          <div class="col-lg-3">Submitter:</div>
          <div class="col-lg">{{model.creator.username}}</div>
        </div>
        <div class="row">
          <div class="col-lg-3">Preparer(s):</div>
          {{!-- <em>Do we track the users that touch the submission, other that creator?</em> --}}
        </div>
        {{#each model.deposits as |deposit|}}
          <div class="row">
            <div class="col-lg-3">Submitted to:</div>
            <div class="col-lg">{{deposit.repo}}</div>
          </div>
          <div class="row">
            <div class="col-lg-3">On:</div>
            <div class="col-lg">{{date-formatter model.submittedDate}}</div>
          </div>
          <div class="row">
            <div class="col-lg-3">Status:</div>
            <div class="col-lg">{{deposit.status}}</div>
          </div>
          <div class="row">
            <div class="col-lg-3">Repo ID:</div>
            <div class="col-lg">
              {{#if deposit.assignedId.uri}}
                <a href="{{deposit.assignedId.uri}}" target="_blank">
                  {{deposit.assignedId.label}}
                </a>
              {{else}}
                {{deposit.assignedId.label}}
              {{/if}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

